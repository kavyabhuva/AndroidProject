<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy_bg">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Star's Turn â­"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:shadowColor="#00D2FF"
        android:shadowRadius="10" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp"
            android:visibility="visible">

            <Button android:id="@+id/btn0" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn1" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn2" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn3" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn4" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn5" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn6" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn7" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
            <Button android:id="@+id/btn8" android:layout_width="100dp" android:layout_height="100dp" android:onClick="playerTap" android:layout_margin="4dp" android:backgroundTint="#20FFFFFF" android:textSize="40sp" />
        </GridLayout>

        <TextView
            android:id="@+id/winnerBox"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:background="#CC000000"
            android:gravity="center"
            android:textColor="#FFD700"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="EXIT GAME"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#F44336"
        android:onClick="gameExit"
        android:visibility="gone" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/exitBtn"
        android:layout_marginBottom="15dp"
        android:text="PLAY AGAIN"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#E91E63"
        android:onClick="gameReset"
        android:visibility="gone" />

</RelativeLayout>