<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy_bg"> <androidx.cardview.widget.CardView
    android:id="@+id/logoCard"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="70dp"
    app:cardBackgroundColor="#E6FFFFFF"
    app:cardCornerRadius="15dp"
    app:cardElevation="12dp">

    <ImageView
        android:id="@+id/universityLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/mu_logo"
        android:scaleType="fitCenter" />
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASTRO"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:shadowColor="#4A90E2"
            android:shadowRadius="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAC TOE"
            android:textColor="#FFD700"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp"
            android:shadowColor="#000000"
            android:shadowRadius="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready for Game ?"
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Presented by Kavya and Devanshi"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/logoCard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-150dp"
        android:indeterminateTint="#FFD700" />

</RelativeLayout>